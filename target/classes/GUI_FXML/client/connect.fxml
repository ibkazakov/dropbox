<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.controllers.ConnectController">

    <VBox layoutX="38.0" layoutY="98.0" prefHeight="75.0" prefWidth="324.0">

        <HBox maxWidth="Infinity" prefWidth="271.0">
            <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="100.0" text="host " />
            <TextField fx:id="hostField" prefHeight="25.0" prefWidth="228.0" promptText="host" />
        </HBox>

        <HBox maxWidth="Infinity" prefWidth="271.0">
            <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="100.0" text="port " />
            <TextField fx:id="portField" prefHeight="25.0" prefWidth="228.0" promptText="port" />
        </HBox>

        <HBox maxWidth="Infinity" prefWidth="271.0">
            <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="100.0" text="clientFolder " />
            <TextField editable="false" prefHeight="25.0" prefWidth="202.0" promptText="clientFolder" fx:id="clientFolderField" />
            <Button prefHeight="25.0" prefWidth="26.0" text="..." onMouseClicked="#chooseClientFolder" />
        </HBox>

        <HBox prefHeight="25.0" prefWidth="271.0">
            <Button maxWidth="Infinity" onMouseClicked="#connect" text="connect" fx:id="connectButton" />
        </HBox>

    </VBox>

</AnchorPane>
